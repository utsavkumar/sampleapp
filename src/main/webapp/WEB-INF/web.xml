<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Facebook Login Application</display-name>
  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>com.hp.fb.integration.controller.HomeServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>FriendsServlet</servlet-name>
  	<display-name>FriendsServlet</display-name>
  	<description></description>
  	<servlet-class>com.hp.fb.integration.controller.FriendsServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>PersonalInfoServlet</servlet-name>
  	<display-name>PersonalInfoServlet</display-name>
  	<description></description>
  	<servlet-class>com.hp.fb.integration.controller.PersonalInfoServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LikesServlet</servlet-name>
  	<display-name>LikesServlet</display-name>
  	<description></description>
  	<servlet-class>com.hp.fb.integration.controller.LikesServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProfilePictureServlet</servlet-name>
  	<display-name>ProfilePictureServlet</display-name>
  	<description></description>
  	<servlet-class>com.hp.fb.integration.controller.ProfilePictureServlet</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/fbhome</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>FriendsServlet</servlet-name>
  	<url-pattern>/FriendsServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>PersonalInfoServlet</servlet-name>
  	<url-pattern>/PersonalInfoServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LikesServlet</servlet-name>
  	<url-pattern>/LikesServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProfilePictureServlet</servlet-name>
  	<url-pattern>/ProfilePictureServlet</url-pattern>
  </servlet-mapping>
  
   
</web-app>
